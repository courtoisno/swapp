			div(class="main")
				div(class="container")
					div(class="section" id="linkScroll")

						div(class="row")
							div(class="col l6 s6 input-field")
								h2(class="center-align") Log in
								form(class="form1" method='POST' action='/login')
									span Username <br>
										input(class="username" name='username' type='text' required)
									span Password <br>
										input(class="password" name='password' type='password' required)
									p 
										input(type='submit' value='Login' class='call_back_btn' required)

							div(class="col l6 s6 input-field")
								h2(class="center-align") Register 
								form(method='POST' action='/newlog')

									p New username: <br>
										input(name='name' type='text' required)
									p New password: <br>
										input(name='pass' type='password' required)
									p Your email: <br>
										input(name='mail' type='text' required)
									p Email again: <br>
										input(name='mail2' type='text' required)
									p First Name
										input(name='firstname' type='text' required)
									p Last Name
										input(name='lastname' type='text' required)
												
									p 
										input(type='submit' value='login' id='submit')

